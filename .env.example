# Base Mini-App Configuration
NEXT_PUBLIC_ROOT_URL=http://localhost:3001
NEXT_PUBLIC_CHAIN_ID=8453
NEXT_PUBLIC_RPC_URL=https://mainnet.base.org

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Socket.IO Configuration
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Minikit Configuration (from Base Build console)
NEXT_PUBLIC_MINIKIT_PROJECT_ID=your_project_id
MINIKIT_WEBHOOK_SECRET=your_webhook_secret_here
MINIKIT_ACCOUNT_ASSOCIATION_HEADER=your_header
MINIKIT_ACCOUNT_ASSOCIATION_PAYLOAD=your_payload
MINIKIT_ACCOUNT_ASSOCIATION_SIGNATURE=your_signature
MINIKIT_ALLOWED_ADDRESS=0x...

# Authentication Configuration
# Privy Configuration (optional for enhanced social login)
NEXT_PUBLIC_PRIVY_APP_ID=your-privy-app-id-here

# Farcaster Configuration
NEXT_PUBLIC_FARCASTER_APP_ID=your-farcaster-app-id

# Blockchain Configuration
NEXT_PUBLIC_GAME_CONTRACT_ADDRESS=0x...
NEXT_PUBLIC_ACHIEVEMENT_CONTRACT_ADDRESS=0x...
PRIVATE_KEY=your_server_wallet_private_key

# Optional: Analytics and Monitoring
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
SENTRY_DSN=your_sentry_dsn

# Development Only
NODE_ENV=development
DEBUG=socket.io*