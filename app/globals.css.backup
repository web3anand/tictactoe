@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  * {
    @apply border-blue-200;
  }
  body {
   .player-symbol {
    @apply w-7 h-7 rounded-full flex items-center justify-center;
  }

  /* Pixel Reveal Effect */
  .pixel-reveal {
    position: relative;
    overflow: hidden;
  }

  .pixel-reveal::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, 
      transparent 0%, 
      rgba(255,255,255,0.9) 25%, 
      transparent 50%, 
      rgba(255,255,255,0.9) 75%, 
      transparent 100%);
    background-size: 8px 8px;
    animation: pixelSweep 0.6s ease-out;
    pointer-events: none;
    z-index: 10;
  }

  @keyframes pixelSweep {
    0% {
      transform: translateX(-100%) translateY(-100%);
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
    100% {
      transform: translateX(100%) translateY(100%);
      opacity: 0;
    }
  }

  .pixel-grid-effect {
    position: relative;
  }

  .pixel-grid-effect::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      linear-gradient(90deg, rgba(59, 130, 246, 0.1) 1px, transparent 1px),
      linear-gradient(rgba(59, 130, 246, 0.1) 1px, transparent 1px);
    background-size: 4px 4px;
    animation: pixelFadeOut 0.8s ease-out forwards;
    pointer-events: none;
    z-index: 5;
  }

  @keyframes pixelFadeOut {
    0% {
      opacity: 1;
      transform: scale(1.2);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.1);
    }
    100% {
      opacity: 0;
      transform: scale(1);
    }
  }@apply bg-white text-gray-900;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
    font-feature-settings: "rlig" 1, "calt" 1;
  }
}

@layer components {
  .multiplier-badge {
    @apply absolute -top-1 -right-1 sm:-top-2 sm:-right-2 bg-blue-500 text-white text-xs font-semibold rounded-full w-5 h-5 sm:w-6 sm:h-6 flex items-center justify-center animate-bounce;
  }
  
  .points-display {
    @apply bg-blue-50 border border-blue-200 text-blue-700 px-3 py-1 sm:px-4 sm:py-2 rounded-lg font-semibold text-sm sm:text-lg;
  }
  
  .leaderboard-item {
    @apply bg-blue-50 border border-blue-200 rounded-lg p-2 sm:p-4 mb-1 sm:mb-2 transition-all duration-300 hover:bg-blue-100 hover:border-blue-300;
  }
  
  .base-card {
    @apply bg-blue-50 border border-blue-200 rounded-lg p-4 transition-all duration-300 hover:bg-blue-100 hover:border-blue-300;
  }
  
  .base-button {
    @apply bg-blue-500 text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-blue-600 disabled:opacity-50 disabled:cursor-not-allowed;
  }
  
  .base-button-secondary {
    @apply bg-blue-50 border border-blue-200 text-blue-700 px-6 py-3 rounded-lg font-semibold transition-all duration-300 hover:bg-blue-100 hover:border-blue-300 disabled:opacity-50 disabled:cursor-not-allowed;
  }


  .game-grid-container {
    @apply grid mx-auto p-3 bg-gradient-to-br from-blue-50 via-white to-cyan-50 rounded-2xl border-2 border-blue-200 shadow-xl;
  }

  .game-grid-6x6 {
    grid-template-columns: repeat(6, 60px);
    grid-template-rows: repeat(6, 60px);
    gap: 4px;
    width: 380px;
    margin: 0 auto;
  }

  .game-cell {
    @apply relative bg-white border-2 border-blue-200 rounded-lg flex items-center justify-center text-xl font-semibold transition-all duration-300;
    width: 60px;
    height: 60px;
  }

  .game-cell-interactive {
    @apply hover:scale-105 hover:bg-blue-50 hover:border-blue-400 hover:shadow-lg;
  }

  .game-cell-disabled {
    @apply opacity-50 cursor-not-allowed;
  }

  .game-status-container {
    @apply text-center mb-6 flex justify-center;
  }

  .game-status-card {
    @apply rounded-xl p-3 shadow-lg w-[380px];
  }

  .game-status-winner {
    @apply bg-gradient-to-r from-green-50 to-emerald-50 border-2 border-green-300;
  }

  .game-status-current {
    @apply bg-gradient-to-r from-gray-50 to-slate-50 border-2 border-gray-300;
  }

  .multiplier-container {
    @apply flex justify-center mb-6;
  }

  .multiplier-card {
    @apply bg-gradient-to-r from-amber-50 via-yellow-50 to-orange-50 border-2 border-amber-300 rounded-xl p-3 shadow-lg w-[380px];
  }

  .error-container {
    @apply mb-4 flex justify-center;
  }

  .error-card {
    @apply bg-red-50 border-2 border-red-300 rounded-xl p-3 shadow-lg w-[380px] mx-auto;
  }

  /* Game Container Styles */
  .room-code-container {
    @apply w-[390px] h-14 bg-gradient-to-br from-blue-50 via-white to-cyan-50 border-2 border-blue-200 rounded-xl flex items-center justify-between px-3 shadow-lg relative;
  }


  .player-stats-container {
    @apply w-[380px] flex gap-2;
  }

  .player-card {
    @apply w-[189px] h-14 rounded-xl p-3 shadow-lg relative overflow-hidden;
  }

  .player-card-1 {
    @apply bg-gradient-to-br from-cyan-50 via-white to-blue-50 border-2 border-cyan-200;
  }

  .player-card-2 {
    @apply bg-gradient-to-br from-pink-50 via-white to-purple-50 border-2 border-pink-200;
  }


  .player-symbol {
    @apply w-8 h-8 rounded-full flex items-center justify-center;
  }

  .player-symbol-x {
    @apply bg-cyan-500;
  }

  .player-symbol-o {
    @apply bg-pink-500;
  }

  .player-status-dot {
    @apply w-2 h-2 rounded-full;
  }

  .player-status-active {
    @apply bg-green-400;
  }

  .player-status-waiting {
    @apply bg-yellow-400;
  }
}
